<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slk.asistes" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".Activities.LobbyActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >

             <intent-filter>
                 <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
        </activity>
        <activity
            android:name=".Activities.SplashActivity"
            android:theme="@style/Theme.Asistes.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.ResultsDataActivity"
            android:label="@string/title_activity_results_data"
            android:parentActivityName=".Activities.LobbyActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.slk.asistes.Activities.LobbyActivity" />
        </activity>
    </application>

</manifest>
