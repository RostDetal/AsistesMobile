<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_card_item"

    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:theme="@style/Theme.Asistes.CardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:id="@+id/card_image"
                android:layout_marginRight="10dp"
                android:layout_gravity="left" />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/card_label"
                    android:text="Рулевая рейка для мерседес бенц asds sdfsdf"
                    android:textColor="#050000"
                    android:maxLines="2"
                    android:layout_marginTop="7dp"
                    android:lineSpacingMultiplier = "0.7"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/card_price"
                    android:textColor="@color/Asistes.Color.Blue"
                    android:text="500 \u20bd"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:id="@+id/card_sku"
                    android:text="A1635458237"
                    android:textColor="#580303"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:id="@+id/card_location"
                    android:text="Московская область, Мытищи"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:id="@+id/card_seller"
                    android:text="ООО ВасяПукин"
                    android:visibility="gone"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:id="@+id/card_count"
                    android:text="В наличии: 10"
                   />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:id="@+id/card_available"
                    android:text="В наличии: 10"
                    />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

