<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/Asistes.StatusBarBackgroundColor</item>
        <item name="colorPrimaryDark">@color/Asistes.SettingsBar.Color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Asistes.Lobby.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/Asistes.TabLayout.CurrentTabIndicatorColor</item>
        <item name="android:background">@color/Asistes.StatusBarBackgroundColor</item>
        <item name="tabSelectedTextColor">@color/Asistes.TabLayout.CurrentTabIndicatorColor</item>
        <item name="tabTextColor">@color/Asistes.TabLayout.DefaultTextColor</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="Theme.Asistes.CardView" parent="android:Widget.TextView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Asistes.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/Asistes.Color.White</item>
    </style>

</resources>
